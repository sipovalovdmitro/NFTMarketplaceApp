<div id="removeSaleModal" class="zoom-anim-dialog mfp-hide modal sm_modal card-effect remove-sale">
  <button class="modal__close md_cls" type="button"><i class="fas fa-times"></i></button>
  <h4 class="modal-title share_link_page_h4"><%= t('collections.show.remove_from_sale') %></h4>
  <div class="modal-body pt-10 pb-10">
    <p class="buynow-content">
      <span class="innertitle"><%= t('collections.show.remove_sale_alert') %></span>
    </p>
  </div>
  <div class="modal-footer" style="text-align:right">
    <%= link_to t('collections.show.remove_from_sale'), '#', id: 'remove_from_sale_id', class: 'btn-effect btn bidding-element-btn theme-btn' %>
    <a class="bidding-element-btn secondary-btn close__modal btn-effect" data-dismiss="modal" role="button"><%= t('shared.cancel') %></a>
  </div>
</div>
<div id="removeSaleModalData" class="zoom-anim-dialog mfp-hide modal sm_modal card-effect remove-sale" data-url="<%= remove_from_sale_collection_path(@collection.address) %>">
  <button class="modal__close md_cls" type="button"><i class="fas fa-times"></i></button>
  <div class="follow-step-block">
    <div class="follow-step-icon">
      <i class="allProgress removeSaleProgress fa fa-spinner fa-pulse"></i>
      <i class="allDone removeSaleDone fa fa-check-circle hide"></i>
      <i class="allRetry removeSaleRetry fa fa-check-circle hide grey"></i>
    </div>
    <div class="follow-step-content">
      <h4>Remove from sale</h4>
      <p class="para-color">Removing...</p>
    </div>
    <div class="follow-step-button">
      <a href="javascript:void(0)" class="allProgress removeSaleProgress">In Progress..</a>
      <a href="javascript:void(0)" class="allDone removeSaleDone hide">Done</a>
      <a href="javascript:void(0)" class="allRetry removeSaleRetry hide">Try again</a>
    </div>
  </div>
</div>
