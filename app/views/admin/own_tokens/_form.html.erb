<div class="card-body">
  <h4 class="card-title"><%= title %></h4>

  <div class="form-group row">
    <label for="example-text-input" class="col-md-2 col-form-label"><%= t("admin.own_tokens.form.name") %></label>
    <div class="col-md-10">
      <%= text_field_tag 'token[name]', @token.name, class: 'form-control input-custom', placeholder: t('admin.own_tokens.form.name'), required: true %>
    </div>
  </div>

   <div class="form-group row">
    <label for="example-text-input" class="col-md-2 col-form-label"><%= t("admin.own_tokens.form.symbol") %></label>
    <div class="col-md-10">
      <%= text_field_tag 'token[symbol]', @token.symbol, class: 'form-control input-custom', placeholder: t('admin.own_tokens.form.symbol'), required: true %>
    </div>
  </div>

   <div class="form-group row">
    <label for="example-text-input" class="col-md-2 col-form-label"><%= t("admin.own_tokens.form.address") %></label>
    <div class="col-md-10">
      <%= text_field_tag 'token[address]', @token.address, class: 'form-control input-custom', placeholder: t('admin.own_tokens.form.address'), required: true %>
    </div>
  </div>
  <%= hidden_field_tag 'token[is_partner]', true %>
  <%= hidden_field_tag 'token[is_own_token]', true %>
  <%= hidden_field_tag 'token[chain_id]', Rails.env.development? ? 4 : 1 %>
  <%= hidden_field_tag 'token[decimals]', 18 %>
  <div class="form-group row">
    <label for="example-number-input" class="col-md-2 col-form-label"></label>
    <div class="col-md-10">
      <button type="submit" class="btn btn-primary mr-1 w-md"><%= t("shared.submit") %></button>
      <%= link_to t("shared.cancel"), admin_own_tokens_path, class: "btn btn-secondary w-md add_btn" %>
    </div>
  </div>
</div>
