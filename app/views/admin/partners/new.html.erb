<div class="main-content">
  <div class="page-content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <% if @partners.errors.any? %>
            <% @partners.errors.full_messages.each do |message|%>
              <h3 class="error"><%= message %> </h3>
            <%end%>
          <%end%>
          </br>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <div class="card">
          <%= form_tag(admin_partners_path, method: :post, multipart: true, id: 'partner_form') do %>
          <div class="card-body">
            <h4 class="card-title"><%= t('admin.partners.form.title') %></h4>

            <div class="form-group row">
              <label for="example-text-input" class="col-md-2 col-form-label"><%= t("admin.partners.form.add_partner") %></label>
              <div class="col-md-8">
                <%= text_field_tag 'partners[address]', nil, class: 'form-control input-custom', placeholder: t('admin.partners.form.add_partner_label'), required: true  %>
              </div>
            </div>

            <div class="form-group row">
              <label for="example-number-input" class="col-md-2 col-form-label"></label>
              <div class="col-md-10">
                <%= button_tag t('shared.submit'), :class => 'btn btn-primary mr-1 w-md', onclick: "validWhitelistedUser()" %>
                <%= link_to t('shared.cancel'), admin_partners_path, class: "btn btn-secondary w-md add_btn" %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
