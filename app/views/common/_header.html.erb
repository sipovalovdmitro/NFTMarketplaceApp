<header class="header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        <div class="header__content hdr_before_log">
          <%= render "common/nav_header" %>
          <%= render "common/search" %>
          <%#= render "common/static_nav" %>
          <div class="header__actions">
            <div class="header__action header__action--search">
              <button class="header__action-btn" type="button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M21.71,20.29,18,16.61A9,9,0,1,0,16.61,18l3.68,3.68a1,1,0,0,0,1.42,0A1,1,0,0,0,21.71,20.29ZM11,18a7,7,0,1,1,7-7A7,7,0,0,1,11,18Z"/>
                </svg>
              </button>
            </div>
            <div class="header__action header__action--signin">
              <a class="open-modal header__action-btn header__action-btn--signin connect_to_wallet" href="#">
                <span><%= t('header.title') %></span>
              </a>
              <%#= render partial: 'common/language_select' %>

              <div class="header__action header__action--profile">
                <a class="" href="javascript:void(0);" role="button" id="dropdownMenuProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <button class="header__btn" type="button"><%= image_tag 'new-menu.svg', alt: '' %></button>
                </a>
                <ul class="dropdown-menu card-effect header__profile-menu" aria-labelledby="dropdownMenuProfile">
                  <%#if current_user.is_approved%>
                    <li class="">
                      <a class="" href="/search">Explore</a>
                    </li>
                    <li>
                      <a href="<%=new_collection_path%>" class="">Create</a>
                    </li>
                    <li>
                      <a href="/rankings" class="">Rankings</a>
                    </li>
                    <%# <li>
                        <a href="/referrals" class="">Referrals</a>
                  </li> %>
                    <li class="">
                      <a class="" href="/all-collections">Collections</a>
                    </li>
                    <%#end%>
                    <li><a href="/faq">How it works</a></li>
                    <li><a href="/about">About Us</a></li>
                  </ul>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <%#= render partial: 'common/wallet_connect' %>
  <%= render partial: 'common/terms' %>
